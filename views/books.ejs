<%- include("partials/header.ejs") %>

<h1>Explore our collection</h1>

<p>Browse through our collection of books. 
    Click <strong>View Article</strong> to see more details about a book or scroll down to add your favorite book to the list.
</p>

<h1>Available Books</h1>

<div class="book-list">
  <% books.forEach(book => { %>
    <div class="book-card">
      <img src="<%= book.coverUrl %>" alt="<%= book.title %> cover" class="book-cover">

      <h2><%= book.title %></h2>
      <p><strong>Author:</strong> <%= book.author %></p>

      <p><strong>Rating:</strong>
        <% for (let i = 0; i < 5; i++) { %>
          <%= i < book.rating ? "‚≠ê" : "‚òÜ" %>
        <% } %>
      </p>

      <blockquote>"<%= book.quote %>"</blockquote>

      <a href="/books/<%= book.id %>" class="view-link">View Article ‚Üí</a>

      <% if (book.userAdded) { %>
        <form action="/books/<%= book.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?');">
          <button type="submit" class="delete-button">üóëÔ∏è Delete</button>
        </form>
      <% } %>
    </div>
  <% }) %>
</div>



